<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="edu.cnm.deepdive.prodevme.WelcomeScreenFragment"
  app:layout_constraintBottom_toBottomOf="parent"
  android:paddingTop="?attr/actionBarSize">

  <!-- TODO: Update blank fragment layout -->
  <ImageView
    android:id="@+id/imageView2"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:scaleType="fitXY"
    app:srcCompat="@drawable/background5"/>

  <!--<ScrollView-->
    <!--android:layout_width="0dp"-->
    <!--android:layout_height="0dp"-->
    <!--android:layout_marginTop="8dp"-->
    <!--app:layout_constraintBottom_toBottomOf="@+id/imageView2"-->
    <!--app:layout_constraintHorizontal_bias="1.0"-->
    <!--app:layout_constraintLeft_toLeftOf="parent"-->
    <!--app:layout_constraintRight_toRightOf="parent"-->
    <!--app:layout_constraintTop_toTopOf="parent"-->
    <!--app:layout_constraintVertical_bias="0.0">-->

    <TextView
      android:id="@+id/welcomeMessage"
      android:textStyle="italic|bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingTop="40dp"
      android:fontFamily="serif"
      android:text="@string/welcome_message"
      android:textAlignment="center"
      android:textColor="#ffffff"
      android:textSize="30sp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      style="@style/textShadow"/>

  <TextView
    android:id="@+id/resumePreviewMessage"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="@string/welcome_preview_message"
    style="@style/textShadow"
    android:textStyle="italic|bold"
    android:layout_marginTop="50dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:fontFamily="serif"
    android:textAlignment="center"
    android:textColor="#ffffff"
    android:textSize="20sp"
    app:layout_constraintTop_toBottomOf="@+id/welcomeMessage"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"/>

  <TextView
    android:id="@+id/resumePreview"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:textStyle="italic|bold"
    android:layout_marginTop="20dp"
    android:background="#cecece"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    android:paddingLeft="15dp"
    android:paddingBottom="15dp"
    android:paddingRight="15dp"
    android:paddingTop="15dp"
    android:fontFamily="serif"
    android:text="@string/welcome_resume_preview"
    app:layout_constraintTop_toBottomOf="@+id/resumePreviewMessage"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginStart="40dp"
    android:layout_marginEnd="40dp"/>



</android.support.constraint.ConstraintLayout>
